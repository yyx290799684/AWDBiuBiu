<Page Name="page" x:Class="AWDBiuBiu.View.RequestManagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AWDBiuBiu.View"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      xmlns:resource="clr-namespace:AWDBiuBiu.Resource"
      xmlns:converter="clr-namespace:AWDBiuBiu.Converter"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="RequestManagePage">

    <Page.Resources>


        <Style x:Key="requestListViewStyle" TargetType="{x:Type ItemsControl}">
            <Setter Property="ItemTemplate" Value="{DynamicResource requestListViewDataTemplate}"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <hc:ScrollViewer x:Name="ScrollViewer" Padding="{TemplateBinding Padding}" CanContentScroll="True" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Hidden" Style="{StaticResource for_scrollviewer}"  >
                            <ItemsPresenter />
                        </hc:ScrollViewer>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="requestListViewDataTemplate">
            <Grid Background="Transparent"  >
                <Grid  Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal"  VerticalAlignment="Center">
                        <TextBlock Text="{Binding Url}" FontSize="12" FontWeight="Bold" VerticalAlignment="Center" MaxWidth="450"
                                       Visibility="{Binding _UrlSource,Converter={StaticResource Enum2VisibilityConverter},ConverterParameter={x:Static resource:UrlSource.拼接}}"/>
                        <TextBlock Text="{Binding UrlList.Count,StringFormat=，{0}条}" ToolTip="{Binding UrlListString}" FontSize="12" FontWeight="Bold" VerticalAlignment="Center"
                                       Visibility="{Binding _UrlSource,Converter={StaticResource Enum2VisibilityConverter},ConverterParameter={x:Static resource:UrlSource.拼接}}"/>
                        <TextBlock Text="{Binding UrlList.Count,StringFormat=URL列表，{0}条}" ToolTip="{Binding UrlListString}" FontSize="12" FontWeight="Bold" VerticalAlignment="Center"
                                       Visibility="{Binding _UrlSource,Converter={StaticResource Enum2VisibilityConverter},ConverterParameter={x:Static resource:UrlSource.来自列表}}"/>

                        <Border Margin="10,0,0,0" Background="#96E8AE" CornerRadius="4" VerticalAlignment="Center" Padding="4,2">
                            <TextBlock Text="{Binding _HttpMode}" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" />
                        </Border>
                        <Border Margin="10,0,0,0" Background="#FAC601" CornerRadius="4" ToolTip="{Binding PostParamString}" VerticalAlignment="Center" Padding="4,2" Visibility="{Binding _HttpMode,Converter={StaticResource Enum2VisibilityConverter},ConverterParameter={x:Static resource:HttpMode.POST}}">
                            <TextBlock Text="{Binding _PostMode}" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" />
                        </Border>
                        <Border Margin="10,0,0,0" Background="#FF9800" CornerRadius="4" ToolTip="{Binding Header}" VerticalAlignment="Center" Padding="4,2" Visibility="{Binding Header,Converter={StaticResource StringEmpty2VisibilityReConverter}}">
                            <TextBlock Text="自定义Header" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" />
                        </Border>
                    </StackPanel>


                    <StackPanel Orientation="Horizontal" Grid.Column="1"  VerticalAlignment="Center">
                        <Button Content="编辑" Cursor="Hand" Command="{Binding EditCommand}" Style="{StaticResource ButtonInfo}"/>
                        <Button Content="删除" Cursor="Hand" Command="{Binding DeleteCommand}" Margin="5,0,0,0" Style="{StaticResource ButtonDanger}"/>
                    </StackPanel>
                </Grid>
                <hc:Divider Margin="0" VerticalAlignment="Bottom" />
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid DataContext="{Binding RequestConfigModel}" Margin="5" >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <hc:Card Background="#F2F2F2" Effect="{StaticResource EffectShadow2}">
            <hc:Card.Header >
                <Grid Margin="10">
                    <TextBlock TextWrapping="NoWrap" FontSize="16" TextTrimming="CharacterEllipsis" FontWeight="Bold" Text="请求管理" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    <Button Content="新增" HorizontalAlignment="Right" Style="{StaticResource ButtonPrimary}" Command="{Binding AddRequestCommand}"/>
                </Grid>
            </hc:Card.Header>
            <ItemsControl ItemsSource="{Binding RequestList}" Style="{StaticResource requestListViewStyle}">

            </ItemsControl>

        </hc:Card>
    </Grid>
</Page>
